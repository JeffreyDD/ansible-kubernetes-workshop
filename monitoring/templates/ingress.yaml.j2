apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: {{ item.name }}
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: {{ item.fqdn }}
    http:
      paths:
      - path: /
        backend:
          serviceName: {{ item.service }}
          servicePort: {{ item.port }}